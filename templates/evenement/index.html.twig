{% extends 'base.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}
<div class="container">
    <h1>Available Events</h1>
    <div class="row">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.nom }}</h5>
                        <p class="card-text">
                            <strong>Type:</strong> {{ event.type }}<br>
                            <strong>City:</strong> {{ event.city }}<br>
                            <strong>Dates:</strong> {{ event.dateDebut|date('Y-m-d') }} to {{ event.dateFin|date('Y-m-d') }}<br>
                            <strong>Number of Guests:</strong> {{ event.nombreInvite }}<br>
                            <strong>User ID:</strong> {{ event.user ? event.user.id : 'N/A' }}
                        </p>
                        <a href="{{ path('app_event_select', {'event_id': event.id}) }}" class="btn btn-primary">Select</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No events available.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}