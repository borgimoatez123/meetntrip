{% extends 'base.html.twig' %}

{% block title %}Select Conference Location{% endblock %}

{% block body %}
    <h1>Select a Conference Location</h1>
    
    {% if locations is empty %}
        <p>No conference locations available for the selected city.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Price Per Day</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for location in locations %}
                    <tr>
                        <td>{{ location.name }}</td>
                        <td>{{ location.address }}</td>
                        <td>{{ location.city }}</td>
                        <td>{{ location.pricePerDay }} USD</td>
                        <td>
                            <a href="{{ path('app_conference_location_select', {
                                'location_id': location.locationId,
                                'hotel_id': hotel_id,
                                'hotel_price': hotel_price,
                                'flight_id': flight_id,
                                'flight_price': flight_price,
                                'userid': userid,
                                'id_evenement': id_evenement,
                                'date_debut': date_debut,
                                'date_fin': date_fin,
                                'nombre_invite': nombre_invite
                            }) }}" class="btn btn-primary">Select</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
